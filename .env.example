# Copy this file to `.env` and replace the placeholder values with
# your deployment-specific secrets before running the stack locally
# or building Docker images.

# ── Application Secrets ─────────────────────────────────────────
SECRET_PASSWORD=change-me-super-secret
NEXTAUTH_SECRET=change-me-nextauth-secret

# ── Public URLs ─────────────────────────────────────────────────
NEXT_PUBLIC_BASE_URL=https://meeting.your-domain.example.com
NEXTAUTH_URL=https://meeting.your-domain.example.com
AUTH_URL=https://meeting.your-domain.example.com
NEXT_PUBLIC_SELF_HOSTED=true

# ── Database ────────────────────────────────────────────────────
DATABASE_URL=postgres://postgres:postgres@rallly_db:5432/rallly
DIRECT_DATABASE_URL=postgres://postgres:postgres@rallly_db:5432/rallly

# ── Email / SMTP ────────────────────────────────────────────────
SUPPORT_EMAIL=support@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=smtp-user@example.com
SMTP_PWD=change-me-smtp-password
NOREPLY_EMAIL=no-reply@example.com
EMAIL_LOGIN_ENABLED=false
REGISTRATION_ENABLED=false
ALLOWED_EMAILS="*@example.com"

# ── Google OAuth (optional) ─────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://meeting.your-domain.example.com/api/auth/google/callback

# ── S3 / Object Storage ─────────────────────────────────────────
S3_BUCKET_NAME=rallly
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret
S3_REGION=us-east-1
S3_ENDPOINT=https://files.your-domain.example.com
S3_FORCE_PATH_STYLE=true

# ── Miscellaneous ───────────────────────────────────────────────
SENTRY_IGNORE_API_RESOLUTION_ERROR=1
INITIAL_ADMIN_EMAIL=owner@example.com
SELF_HOSTED_DEFAULT_SEATS=50

# Uncomment and adjust if you want to override license behaviour
# SELF_HOSTED_LICENSE_TYPE=ENTERPRISE
# SELF_HOSTED_LICENSE_SEATS=999
# SELF_HOSTED_MAX_SEATS=999
